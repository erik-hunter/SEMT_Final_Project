<%= form_for @post, :url => {:action => :update, :controller => :post}  do |f| %>
  Post Title:      <%= f.text_field :Title, :value => @post.Title %><br />
  Post Content:    <%= f.text_field :Content, :value => @post.Content %><br />
  Post Recepients: <%= f.text_field :Recepients, :value => @post.Recepients %><br />
  
  <%= f.submit "update" %>
<% end %>
